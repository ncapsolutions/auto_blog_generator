<div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-800">MY Dashboard</h1>
    <p class="text-gray-600">Manage your posts and see your activity.</p>
</div>

<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <div class="bg-white rounded-xl shadow-md p-6">
        <div class="flex items-center">
            <div class="gradient-bg rounded-lg p-3 mr-4">
                <i class="fas fa-file-alt text-white text-xl"></i>
            </div>
            <div>
                <p class="text-gray-500 text-sm">Total Posts</p>
                <p class="text-2xl font-bold text-gray-800"><%= current_user.posts.count %></p>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-xl shadow-md p-6">
        <div class="flex items-center">
            <div class="bg-green-100 rounded-lg p-3 mr-4">
                <i class="fas fa-globe text-green-600 text-xl"></i>
            </div>
            <div>
                <p class="text-gray-500 text-sm">Public Posts</p>
                <p class="text-2xl font-bold text-gray-800"><%= current_user.posts.where(public: true).count %></p>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-xl shadow-md p-6">
        <div class="flex items-center">
            <div class="bg-blue-100 rounded-lg p-3 mr-4">
                <i class="fas fa-lock text-blue-600 text-xl"></i>
            </div>
            <div>
                <p class="text-gray-500 text-sm">Private Posts</p>
                <p class="text-2xl font-bold text-gray-800"><%= current_user.posts.where(public: false).count %></p>
            </div>
        </div>
    </div>
</div>

<div class="flex justify-between items-center mb-6">
    <h2 class="text-2xl font-bold text-gray-800">Your Posts</h2>
    <%= link_to new_post_path, class: "bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition duration-300 flex items-center" do %>
    <i class="fas fa-plus mr-2"></i> New Post
    <% end %>
</div>

<% if @posts.any? %>
<div class="bg-white rounded-xl shadow-md overflow-hidden">
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                <% @posts.each do |post| %>
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm font-medium text-gray-900">
                            <%= truncate(post.title, length: 100) %>
                        </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= post.public? ? 'bg-green-100 text-green-800' : 'bg-blue-100 text-blue-800' %>">
                            <%= post.public? ? 'Public' : 'Private' %>
                        </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        <%= time_ago_in_words(post.created_at) %> ago
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium flex space-x-3">
                        <%= link_to 'View', post, class: "text-blue-600 hover:text-blue-900" %>
                        <%= link_to 'Edit', edit_post_path(post), class: "text-indigo-600 hover:text-indigo-900" %>
                        <%= link_to 'Delete', post, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "text-red-600 hover:text-red-900" %>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>

<!-- Pagination -->
<% if @posts.total_pages > 1 %>
<div class="mt-6 flex justify-center">
    <%= paginate @posts %>
</div>
<% end %>
<% else %>
<div class="bg-white rounded-xl shadow-md p-8 text-center">
    <i class="fas fa-edit text-4xl text-gray-300 mb-4"></i>
    <h3 class="text-xl font-semibold text-gray-700 mb-2">You haven't created any posts yet</h3>
    <p class="text-gray-500 mb-4">Start sharing your thoughts with the world!</p>
    <%= link_to "Create Your First Post", new_post_path, class: "bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition duration-300" %>
</div>
<% end %>