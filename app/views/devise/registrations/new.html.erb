<div class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="w-full max-w-md bg-white p-8 rounded-2xl shadow-lg">
        <h2 class="text-2xl font-bold text-center mb-6">Sign up for ModernBlog</h2>
        <% if resource.errors.any? %>
        <div class="mb-4 text-red-600">
            <h4><%= pluralize(resource.errors.count, "error") %> prohibited this user from being saved:</h4>
            <ul>
                <% resource.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
            </ul>
        </div>
        <% end %>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="mb-4">
            <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
            <%= f.email_field :email, autofocus: true, class: "w-full mt-1 p-2 border rounded-lg focus:ring focus:ring-indigo-300" %>
        </div>

        <div class="mb-4">
            <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
            <% if @minimum_password_length %>
            <span class="text-xs text-gray-500">(<%= @minimum_password_length %> characters minimum)</span>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: "w-full mt-1 p-2 border rounded-lg focus:ring focus:ring-indigo-300" %>
        </div>

        <div class="mb-4">
            <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full mt-1 p-2 border rounded-lg focus:ring focus:ring-indigo-300" %>
        </div>

        <%= f.submit "Sign up", class: "w-full bg-indigo-600 text-white py-2 rounded-lg hover:bg-indigo-700 transition" %>
        <% end %>

        <p class="mt-6 text-center text-sm text-gray-600">
            Already have an account?
            <%= link_to "Log in", new_session_path(resource_name), class: "text-indigo-600 hover:underline" %>
        </p>
    </div>
</div>