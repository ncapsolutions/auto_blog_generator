<div class="flex items-center justify-center min-h-screen bg-gray-100">
  <div class="w-full max-w-md bg-white p-8 rounded-2xl shadow-lg">
    <h2 class="text-2xl font-bold text-center mb-6">Sign in to ModernBlog</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, class: "w-full mt-1 p-2 border rounded-lg focus:ring focus:ring-indigo-300" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full mt-1 p-2 border rounded-lg focus:ring focus:ring-indigo-300" %>
      </div>

      <div class="flex items-center justify-between mb-6">
        <div>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "ml-2 text-sm text-gray-600" %>
        </div>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-sm text-indigo-600 hover:underline" %>
      </div>

      <%= f.submit "Log in", class: "w-full bg-indigo-600 text-white py-2 rounded-lg hover:bg-indigo-700 transition" %>
    <% end %>

    <p class="mt-6 text-center text-sm text-gray-600">
      Donâ€™t have an account?
      <%= link_to "Sign up", new_registration_path(resource_name), class: "text-indigo-600 hover:underline" %>
    </p>
  </div>
</div>
